<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part>
	<display-name>Counter</display-name>
	<config>

        <input name="heading" type="TextLine">
            <label>Heading</label>
            <occurrences minimum="0" maximum="1"/>
            <default>It's the Penultimate Countown!</default>
        </input>

        <input name="countdown" type="Long">
            <occurrences minimum="1" maximum="1"/>
            <label>Countdown from</label>
            <default>42</default>
            <config>
                <min>1</min>
                <max>1000</max>
            </config>
        </input>

        <input name="rendering" type="RadioButton">
            <label>Rendering method</label>
            <occurrences minimum="0" maximum="0"/>
            <config>
                <option value="client">Client-side</option>
                <option value="ssr">Server-side</option>
            </config>
            <default>ssr</default>
        </input>

        <input name="endquote" type="TextLine">
            <label>It's the final end quote</label>
            <occurrences minimum="0" maximum="1"/>
            <default>I'm sure we'll all miss her so</default>
        </input>
	</config>
</part>
